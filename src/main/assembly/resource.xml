            <directoryMode>0644</directoryMode>
        </fileSet>
        <fileSet>
            <directory>target</directory>
            <outputDirectory>lib</outputDirectory>
            <includes>
                <include>madoka-generator-*.jar</include>
            </includes>
            <fileMode>0644</fileMode>
            <directoryMode>0644</directoryMode>
        </fileSet>
    </fileSets>
